mixin pageHeader(tituloTema, srcImagen, pagina)
    .page-header.mb-5
        .page-textura
            .container

                .row.align-items-center

                    .col-12.col-lg-6

                        h3#curso-titulo-componente.curso-subtitulo Salud Penitenciaria
                        h1#curso-titulo-tema.curso-titulo Sistema de Seguridad y Salud en el Trabajo

                        .brand-line-primary

                        if pagina == 'main'

                            .keywords
                                span.badge.badge-pill.badge-light.mr-2 #Riesgo laboral
                                span.badge.badge-pill.badge-light.mr-2 #Prevención
                                span.badge.badge-pill.badge-light.mr-2 #Agentes biológicos

                            .barra-dots.mt-5
                                img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                        else 
                            p.curso-descripcion.text-small Las personas que laboran en las áreas de sanidad de los ERON, requieren conocer los elementos conceptuales del Sistema de Seguridad y Salud en el Trabajo en el ámbito penitenciario orientado específicamente al personal que ejerce una profesión u ocupación en salud, de igual forma,  promoción de la salud y prevención de la enfermedad en entornos laborales y los derechos y deberes frente al empleador, de conformidad con la normatividad vigente, con el propósito de ejercer las medidas tendientes a mantener el control de los factores de riesgo laborales procedentes de agentes biológicos, físicos o químicos o psicosociales; logrando prevención de impactos nocivos y asegurando que los procedimientos no atenten contra la salud y seguridad de trabajadores de la salud, pacientes, visitantes y el medio ambiente.
                
                        if pagina == 'home'
                             a.curso-btn-iniciar.btn.btn-light(href="main.html")
                                span Iniciar Curso


                    .col-12.col-lg-6.text-center.d-none.d-lg-block
                        img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
